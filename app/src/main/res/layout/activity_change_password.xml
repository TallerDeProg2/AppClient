<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fiuba.ubreapp.ChangePassword"
    android:background="@drawable/images">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editText27"
        android:layout_marginTop="52dp"
        android:text="Contraseña actual:"
        android:textAllCaps="true"
        android:textColor="@color/colorAccent"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="67dp" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText28"
        android:layout_alignStart="@+id/editText28"
        android:text="Nueva contraseña:"
        android:textAllCaps="true"
        android:textColor="@color/colorAccent"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="185dp" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText29"
        android:layout_alignStart="@+id/editText29"
        android:text="Repetir contraseña:"
        android:textAllCaps="true"
        android:textColor="@color/colorAccent"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="293dp" />

    <EditText
        android:id="@+id/editText27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView23"
        android:layout_below="@+id/textView10"
        android:ems="10"
        android:inputType="textPassword"
        android:textAllCaps="true"
        android:textColor="@color/colorAccent"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="84dp" />

    <EditText
        android:id="@+id/editText28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText29"
        android:layout_alignStart="@+id/editText29"
        android:layout_marginBottom="67dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textAllCaps="true"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="202dp" />

    <EditText
        android:id="@+id/editText29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button5"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="92dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textAllCaps="true"
        android:textColor="@color/colorAccent"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="310dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp"
        android:text="Cambiar"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="410dp" />

</RelativeLayout>
