<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fiuba.ubreapp.ChangePassword">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actual Password:"
        tools:layout_editor_absoluteY="67dp"
        tools:layout_editor_absoluteX="72dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editText27"
        android:layout_marginTop="52dp" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Password:"
        tools:layout_editor_absoluteY="185dp"
        tools:layout_editor_absoluteX="72dp"
        android:layout_above="@+id/editText28"
        android:layout_alignStart="@+id/editText28" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repeat Password:"
        tools:layout_editor_absoluteY="293dp"
        tools:layout_editor_absoluteX="72dp"
        android:layout_above="@+id/editText29"
        android:layout_alignStart="@+id/editText29" />

    <EditText
        android:id="@+id/editText27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteY="84dp"
        tools:layout_editor_absoluteX="72dp"
        android:layout_below="@+id/textView10"
        android:layout_alignStart="@+id/textView23" />

    <EditText
        android:id="@+id/editText28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteY="202dp"
        tools:layout_editor_absoluteX="72dp"
        android:layout_marginBottom="67dp"
        android:layout_above="@+id/editText29"
        android:layout_alignStart="@+id/editText29" />

    <EditText
        android:id="@+id/editText29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteY="310dp"
        tools:layout_editor_absoluteX="72dp"
        android:layout_marginBottom="92dp"
        android:layout_above="@+id/button5"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change"
        tools:layout_editor_absoluteY="410dp"
        tools:layout_editor_absoluteX="136dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp" />

</RelativeLayout>
