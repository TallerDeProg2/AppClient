<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fiuba.ubreapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <service android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".SplashScreen"
            android:label="@string/title_activity_splash_screen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.LOGINACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register" />
        <activity
            android:name=".RegisterPaymentData"
            android:label="@string/title_activity_register_payment_data" />
        <activity
            android:name=".RegisterCarActivity"
            android:label="@string/title_activity_register_car" />
        <activity
            android:name=".MapActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ModifyProfile"
            android:label="Edit Profile" />
        <activity
            android:name=".ViewProfile"
            android:label="Profile" />
        <activity
            android:name=".ChangePassword"
            android:label="Change Password" />
        <activity android:name=".DataCar" />
        <activity
            android:name=".DataCard"
            android:label="Card" />
        <activity android:name=".TripSearchActivity" />
        <activity android:name=".AvailableTripActivity" />
        <activity
            android:name=".MapTripActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".TripCostActivity" />
        <activity android:name=".MapDoTripActivity" />
        <activity android:name=".ListDirectionsActivity" />
        <activity android:name=".PayTripActivity" />
        <activity android:name=".RegisterPaymentDataDriver" />
        <activity android:name=".HistorialActivity" />
        <activity android:name=".TripInfoActivity" />
        <activity android:name=".EndTripActivity" />
        <activity android:name=".InfoHistorialActivity"></activity>
    </application>

</manifest>