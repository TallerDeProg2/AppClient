<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fiuba.ubreapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="26" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name="fiuba.ubreapp.SplashScreen"
            android:label="@string/title_activity_splash_screen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="fiuba.ubreapp.LoginActivity" >
            <intent-filter>
                <action android:name="android.intent.action.LOGINACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="fiuba.ubreapp.RegisterActivity"
            android:label="@string/title_activity_register" />
        <activity
            android:name="fiuba.ubreapp.RegisterPaymentData"
            android:label="@string/title_activity_register_payment_data" />
        <activity
            android:name="fiuba.ubreapp.RegisterCarActivity"
            android:label="@string/title_activity_register_car" />
        <activity
            android:name="fiuba.ubreapp.MapActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="fiuba.ubreapp.ModifyProfile"
            android:label="Edit Profile" />
        <activity
            android:name="fiuba.ubreapp.ViewProfile"
            android:label="Profile" />
        <activity
            android:name="fiuba.ubreapp.ChangePassword"
            android:label="Change Password" />
        <activity android:name="fiuba.ubreapp.ViewCar" />
        <activity android:name="fiuba.ubreapp.ViewCard" />
        <activity android:name="fiuba.ubreapp.ModifyCar" />
        <activity
            android:name="fiuba.ubreapp.ModifyCard"
            android:label="Card" />
        <activity android:name="fiuba.ubreapp.TripSearchActivity" />
        <activity android:name="fiuba.ubreapp.AvailableTripActivity" />
        <activity
            android:name="fiuba.ubreapp.MapTripActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="fiuba.ubreapp.TripCostActivity" />
        <activity android:name="fiuba.ubreapp.MapDoTripActivity" />
        <activity android:name="fiuba.ubreapp.ListDirectionsActivity" />
        <activity android:name="fiuba.ubreapp.PayTripActivity" />
        <activity android:name="fiuba.ubreapp.RegisterPaymentDataDriver" />

        <meta-data
            android:name="android.support.VERSION"
            android:value="26.1.0" />

        <activity
            android:name="com.google.android.gms.common.api.GoogleApiActivity"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT" />
    </application>

</manifest>